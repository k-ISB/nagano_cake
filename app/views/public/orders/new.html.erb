<h1 class="text-center">注文情報入力</h1>

<div class="mx-auto w-50 border rounded bg-white p-3">
<%= form_with(url: orders_path, method: :post, local: true) do |f| %>
 
  <div class="form-group">
    <div class="lead mb-2">支払い方法</div>
    <%= f.radio_button :payment_select, 0 %>
    クレジットカード　　
    <%= f.radio_button :payment_select, 1 %>
    銀行振込
    </div>

  <div class="form-group mt-4">
    <div class="lead">お届け先</div>
    <% if current_end_user.address %>
      
        <%= f.radio_button :address_select, 0 %>
        <%= f.label :ご自身の住所 %>　　
        <%= current_end_user.address %>
      
    <% end %>
<!--
      <%= f.radio_button :address_select, 1 %>
      <%= f.label :登録済住所から選択 %><br>
      <%= f.collection_select(:address_id, @addresses, :id, :address) %>
    </div>
    -->
    
    <div><%= f.radio_button :address_select, 2 %>  新規住所登録</div>

    <div class="form-group has-icon">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :住所 %>
      <%= f.text_field :shipping_address, class:"form-control" %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :宛名 %>
      <%= f.text_field :direction, class:"form-control" %>
    </div>
  </div>
    
    <%= f.submit "購入確認へ", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>
  </div>