<% if admin_signed_in? %>
  
  <% if params[:search] %>
    <h1>検索結果</h1>

    <% @items.each do |item| %>
      <%= link_to item.name, item_path(item) %>
    <% end %>
  <% else %>
    <h1>管理者画面</h1>
    本日の注文件数 : <%= @num %> 件
    <% end %>

<% else %>

  <h1>商品一覧</h1>
  <% @items.each do |item| %>
    <%= link_to item.name, item_path(item.id) %>
  <% end %>

<% end %>