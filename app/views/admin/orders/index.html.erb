<h1>受注一覧</h1>


<table border="1">
        <thead>
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
            </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <% %>
  　　　　　<tr>
            <td><%= link_to order.created_at, admin_order_path(order) %></td>
            <td><%= order.end_user.full_name %></td>
            <td><%= order.ordered_items.sum(:quantity) %></td>
            <td><%= order.status %></td>
          </tr>
　　　　　<% end %>
        </tbody>
    </table>