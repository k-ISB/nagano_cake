<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.1/css/all.css" integrity="sha384-xxzQGERXS00kBmZW/6qxqJPyxW3UR0BPsL4c8ILaIWXva5kFi7TxkIIaMiKtqV1Q" crossorigin="anonymous">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <%= link_to "秘密のケーキ屋さん", root_path, class: "navbar-brand" %>
     
    
    <!--<% if current_end_user %>
      <div style="color:white">ようこそ<%= current_end_user.full_name %>さん</div>
    <% end %>-->
    

      <ul class="navbar-nav nav justify-content-end mr-sm-2">
        <% if end_user_signed_in? %>
        <li class="nav-item">
            <%= link_to "マイページ", end_users_path, class: "nav-link fas fa-user" %>
          </li>
          <li class="nav-item">
            <%= link_to "カート一覧", cart_items_path, class: "nav-link fas fa-shopping-cart" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_end_user_session_path(current_end_user), method: :delete, class: "nav-link fas fa-sign-out-alt" %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="nav-item">
            <%= link_to "商品一覧", admin_items_path, class: "nav-link glyphicon glyphicon-log-out logout" %>
          </li>
          <li class="nav-item">
            <%= link_to "受注一覧", admin_orders_path, class: "nav-link glyphicon glyphicon-log-out logout" %>
          </li>
          <li class="nav-item">
            <%= link_to "商品登録", new_admin_item_path, class: "nav-link glyphicon glyphicon-log-out logout" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link fas fa-sign-out-alt" %>
          </li>
          <div id="nav-search">
            <%= form_tag root_path, :method => 'get' do %>
              <p>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "検索", :name => nil %>
              </p>
            <% end %>
          </div>
        <% else %>
          <li class="nav-item">
            <%= link_to "ログイン", new_end_user_session_path, class: "nav-link fas fa-sign-in-alt" %>
          </li>
          <li class="nav-item">
            <%= link_to "新規登録", new_end_user_registration_path, class: "nav-link fas fa-sign-out-alt" %>
          </li>
        <% end %>
      </ul>
      </div>
    </nav>
  
</header>
  <div class="body">
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
